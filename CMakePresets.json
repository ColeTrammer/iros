{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 2
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
                "CMAKE_INSTALL_MESSAGE": "NEVER",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "IROS_WarningFlags": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "gcc_base",
            "hidden": true,
            "cacheVariables": {
                "IROS_DiagnosticFlags": "-fdiagnostics-color=always",
                "IROS_ExtraFlags": "-ffold-simple-inlines"
            }
        },
        {
            "name": "clang_base",
            "hidden": true,
            "cacheVariables": {
                "IROS_DiagnosticFlags": "-fcolor-diagnostics -fconstexpr-steps=10000000 -fsized-deallocation",
                "IROS_WarningFlags": "-Wall -Wextra -Wpedantic",
                "CMAKE_CXX_COMPILER": "clang++-16"
            }
        },
        {
            "name": "release_base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "IROS_ExtraFlags": "-O3"
            },
            "inherits": ["base"]
        },
        {
            "name": "debug_base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "inherits": ["base"]
        },
        {
            "name": "iros_x86_64",
            "displayName": "Iros x64_64",
            "description": "Compile Iros for x86_64",
            "binaryDir": "${sourceDir}/build/x86_64/gcc/release",
            "installDir": "${sourceDir}/build/x86_64/sysroot/usr",
            "toolchainFile": "${sourceDir}/meta/cmake/CMakeToolchain_Iros_x86_64.txt",
            "cacheVariables": {
                "IROS_BuildIris": "ON",
                "IROS_BuildUserspace": "ON",
                "IROS_BuildTests": "ON",
                "IROS_BuildCcpp": "ON",
                "IROS_UseDiusRuntime": "ON",
                "IROS_ExtraFlags": "-D__iros__=1",
                "CMAKE_CXX_COMPILER_WORKS": "ON",
                "CMAKE_CROSSCOMPILING_EMULATOR": "${sourceDir}/meta/run-command-on-iris.sh;x86_64/gcc/release"
            },
            "inherits": ["release_base", "gcc_base"]
        },
        {
            "name": "debug_iros_x86_64",
            "displayName": "Debug Iros x64_64",
            "description": "Compile Debug Iros for x86_64",
            "binaryDir": "${sourceDir}/build/x86_64/gcc/debug",
            "installDir": "${sourceDir}/build/x86_64/sysroot/usr",
            "toolchainFile": "${sourceDir}/meta/cmake/CMakeToolchain_Iros_x86_64.txt",
            "cacheVariables": {
                "IROS_BuildIris": "ON",
                "IROS_BuildUserspace": "ON",
                "IROS_BuildTests": "ON",
                "IROS_BuildCcpp": "ON",
                "IROS_UseDiusRuntime": "ON",
                "IROS_ExtraFlags": "-D__iros__=1",
                "IROS_IrisFlags": "-Og -g",
                "CMAKE_CXX_COMPILER_WORKS": "ON",
                "CMAKE_CROSSCOMPILING_EMULATOR": "${sourceDir}/meta/run-command-on-iris.sh;x86_64/gcc/debug"
            },
            "inherits": ["release_base", "gcc_base"]
        },
        {
            "name": "clang_iros_x86_64",
            "displayName": "Clang Iros x64_64",
            "description": "Compile Iros for x86_64",
            "binaryDir": "${sourceDir}/build/x86_64/clang/release",
            "installDir": "${sourceDir}/build/x86_64/sysroot/usr",
            "toolchainFile": "${sourceDir}/meta/cmake/CMakeToolchain_Iros_Clang_x86_64.txt",
            "cacheVariables": {
                "IROS_BuildIris": "ON",
                "IROS_BuildUserspace": "ON",
                "IROS_BuildTests": "ON",
                "IROS_BuildCcpp": "ON",
                "IROS_UseDiusRuntime": "ON",
                "IROS_ExtraFlags": "-D__iros__=1 -U__linux__",
                "CMAKE_CXX_COMPILER_WORKS": "ON",
                "CMAKE_CROSSCOMPILING_EMULATOR": "${sourceDir}/meta/run-command-on-iris.sh;x86_64/clang/release"
            },
            "inherits": ["release_base", "clang_base"]
        },
        {
            "name": "iros_x86_64_unity",
            "displayName": "Iros x64_64 Unity",
            "description": "Compile Iros Unity Build for x86_64",
            "binaryDir": "${sourceDir}/build/x86_64/gcc/release/unity",
            "installDir": "${sourceDir}/build/x86_64/sysroot/usr",
            "toolchainFile": "${sourceDir}/meta/cmake/CMakeToolchain_Iros_x86_64.txt",
            "cacheVariables": {
                "IROS_BuildIris": "ON",
                "IROS_BuildUserspace": "ON",
                "IROS_BuildTests": "ON",
                "IROS_BuildTools": "OFF",
                "IROS_BuildCcpp": "ON",
                "IROS_UseDiusRuntime": "ON",
                "IROS_ExtraFlags": "-D__iros__=1",
                "CMAKE_CXX_COMPILER_WORKS": "ON",
                "CMAKE_CROSSCOMPILING_EMULATOR": "${sourceDir}/meta/run-command-on-iris.sh;x86_64/gcc/release/unity",
                "CMAKE_UNITY_BUILD": "ON"
            },
            "inherits": ["release_base", "gcc_base"]
        },
        {
            "name": "dius_runtime_release",
            "displayName": "Dius Runtime Release Config",
            "description": "Release build with dius runtime enabled",
            "binaryDir": "${sourceDir}/build/host/gcc/release/dius-runtime",
            "installDir": "${sourceDir}/build/host/gcc/release/dius-runtime/install",
            "cacheVariables": {
                "IROS_UseDiusRuntime": "ON",
                "IROS_BuildCcpp": "ON"
            },
            "inherits": ["release_base", "gcc_base"]
        },
        {
            "name": "dius_runtime_debug",
            "displayName": "Dius Runtime Debug Config",
            "description": "Debug build with dius runtime enabled",
            "binaryDir": "${sourceDir}/build/host/gcc/debug/dius-runtime",
            "installDir": "${sourceDir}/build/host/gcc/debug/dius-runtime/install",
            "cacheVariables": {
                "IROS_UseDiusRuntime": "ON",
                "IROS_BuildCcpp": "ON"
            },
            "inherits": ["debug_base", "gcc_base"]
        },
        {
            "name": "release",
            "displayName": "Release Config",
            "description": "Default host release build",
            "binaryDir": "${sourceDir}/build/host/gcc/release",
            "installDir": "${sourceDir}/build/host/gcc/release/install",
            "inherits": ["release_base", "gcc_base"]
        },
        {
            "name": "tools",
            "displayName": "Tools Config",
            "description": "Build only host tools required to cross compile",
            "binaryDir": "${sourceDir}/build/host/tools",
            "installDir": "${sourceDir}/build/host/tools/install",
            "cacheVariables": {
                "IROS_BuildTests": "OFF",
                "IROS_BuildUserspace": "OFF",
                "IROS_BuildTools": "ON",
                "IROS_BuildCcpp": "OFF",
                "CMAKE_UNITY_BUILD": "ON"
            },
            "inherits": ["release_base", "gcc_base"]
        },
        {
            "name": "debug",
            "displayName": "Debug Config",
            "description": "host debug build",
            "binaryDir": "${sourceDir}/build/host/gcc/debug",
            "installDir": "${sourceDir}/build/host/gcc/debug/install",
            "inherits": ["debug_base", "gcc_base"]
        },
        {
            "name": "tsan",
            "displayName": "Thread Sanitizer",
            "description": "Build with thread sanitizer enabled",
            "binaryDir": "${sourceDir}/build/host/gcc/tsan",
            "installDir": "${sourceDir}/build/host/gcc/tsan/install",
            "cacheVariables": {
                "IROS_BuildCcpp": "OFF",
                "IROS_SanitizerFlags": "-fsanitize=thread -DDI_SANITIZER"
            },
            "inherits": ["debug_base", "gcc_base"]
        },
        {
            "name": "msan",
            "displayName": "Memory Sanitizer",
            "description": "Build with memory sanitizer enabled",
            "binaryDir": "${sourceDir}/build/host/clang/msan",
            "installDir": "${sourceDir}/build/host/clang/msan/install",
            "cacheVariables": {
                "IROS_BuildCcpp": "OFF",
                "IROS_SanitizerFlags": "-fsanitize=memory -DDI_SANITIZER"
            },
            "inherits": ["debug_base", "clang_base"]
        },
        {
            "name": "ubasan",
            "displayName": "Undefined Behavior and Address Sanitizer",
            "description": "Build with defined behavior and address sanitizer enabled",
            "binaryDir": "${sourceDir}/build/host/gcc/ubasan",
            "installDir": "${sourceDir}/build/host/gcc/ubasan/install",
            "cacheVariables": {
                "IROS_BuildCcpp": "OFF",
                "IROS_SanitizerFlags": "-fsanitize=address,undefined -DDI_SANITIZER"
            },
            "inherits": ["debug_base", "gcc_base"]
        },
        {
            "name": "coverage",
            "displayName": "Code Coverage",
            "description": "Build with code coverage instrumentation",
            "binaryDir": "${sourceDir}/build/host/gcc/coverage",
            "installDir": "${sourceDir}/build/host/gcc/coverage/install",
            "cacheVariables": {
                "IROS_BuildCcpp": "OFF",
                "IROS_ExtraFlags": "-Og --coverage"
            },
            "inherits": ["debug_base", "gcc_base"]
        },
        {
            "name": "clang_dius_runtime_release",
            "displayName": "Clang Dius Runtime Release Config",
            "description": "Clang release build with dius runtime enabled",
            "binaryDir": "${sourceDir}/build/host/clang/release/dius-runtime",
            "installDir": "${sourceDir}/build/host/clang/release/dius-runtime/install",
            "cacheVariables": {
                "IROS_UseDiusRuntime": "ON",
                "IROS_BuildCcpp": "ON"
            },
            "inherits": ["release_base", "clang_base"]
        },
        {
            "name": "clang_dius_runtime_debug",
            "displayName": "Clang Dius Runtime Debug Config",
            "description": "Clang debug build with dius runtime enabled",
            "binaryDir": "${sourceDir}/build/host/clang/debug/dius-runtime",
            "installDir": "${sourceDir}/build/host/clang/debug/dius-runtime/install",
            "cacheVariables": {
                "IROS_UseDiusRuntime": "ON",
                "IROS_BuildCcpp": "ON"
            },
            "inherits": ["debug_base", "clang_base"]
        },
        {
            "name": "clang_release",
            "displayName": "Clang Release Config",
            "description": "Clang host release build",
            "binaryDir": "${sourceDir}/build/host/clang/release",
            "installDir": "${sourceDir}/build/host/clang/release/install",
            "inherits": ["release_base", "clang_base"]
        },
        {
            "name": "clang_debug",
            "displayName": "Clang Debug Config",
            "description": "Clang host debug build",
            "binaryDir": "${sourceDir}/build/host/clang/debug",
            "installDir": "${sourceDir}/build/host/clang/debug/install",
            "inherits": ["debug_base", "clang_base"]
        },
        {
            "name": "release_unity",
            "displayName": "Release Unity Config",
            "description": "Release build with unity mode enabled",
            "binaryDir": "${sourceDir}/build/host/gcc/release/unity",
            "installDir": "${sourceDir}/build/host/gcc/release/unity/install",
            "cacheVariables": {
                "IROS_UseDiusRuntime": "ON",
                "IROS_BuildCcpp": "ON",
                "CMAKE_UNITY_BUILD": "ON"
            },
            "inherits": ["release_base", "gcc_base"]
        }
    ],

{
    "search.exclude": {
        "**/.git": true,
        "build/**": true,
        "legacy/**": true,
        "cross/**": true,
        ".cache/**": true,
        "/usr/include/**": true
    },
    "files.exclude": {
        "**/.git": true,
        "build/**": true,
        "legacy/**": true,
        "cross/**": true,
        ".cache/**": true,
        "/usr/include/**": true
    },
    "files.associations": {
        "*.json": "json",
        ".prettierrc": "json",
        ".clang-format": "yaml",
        ".clang-tidy": "yaml",
        ".clangd": "yaml",
        "CMakeToolchain*.txt": "cmake"
    },
    "cmake.exportCompileCommandsFile": true,
    "cmake.copyCompileCommands": "${workspaceRoot}/build/compile_commands.json",
    "cmake.configureOnOpen": false,
    "cmake.languageSupport.enableFileAPI": true,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.autoAddFileAssociations": false,
    "C_Cpp.intelliSenseEngine": "disabled",
    "clangd.path": "/usr/bin/clangd-16",
    "clangd.arguments": [
        "--query-driver=/usr/local/bin/*,/usr/bin/*,${workspaceFolder}/cross/bin/*",
        "--header-insertion=never"
    ],
    "livePreview.autoRefreshPreview": "Never",
    "livePreview.defaultPreviewPath": "build/x86_64/html",
    "githubIssues.issueBranchTitle": "i${issueNumber}-${sanitizedIssueTitle}",
    "editor.tabSize": 4,
    "files.insertFinalNewline": true,
    "editor.rulers": [120],
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[dockercompose]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "[yaml]": {
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.tabSize": 2
    },
    "[cmake]": {
        "editor.defaultFormatter": "cheshirekow.cmake-format"
    },
    "[cmake-cache]": {
        "editor.defaultFormatter": "cheshirekow.cmake-format"
    }
}

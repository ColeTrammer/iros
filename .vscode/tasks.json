{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd ${input:buildDirectory} && ([ ! ${input:buildIros} ] || ninja -C .. native-install) && ninja ${input:buildTarget}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "clear": true,
            },
        },
        {
            "label": "test",
            "type": "shell",
            "command": "cd ${input:buildDirectory} && ctest",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "clear": true
            },
            "dependsOn": [
                "build"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "cd ${workspaceFolder}/scripts && IROS_ARCH=${input:irosArchitecture} DISPLAY=${env:DISPLAY} ./qemu.sh",
            "presentation": {
                "focus": true,
                "panel": "shared",
            }
        },
        {
            "label": "build and run",
            "type": "shell",
            "command": "cd ${workspaceFolder}/scripts && IROS_ARCH=${input:irosArchitecture} DISPLAY=${env:DISPLAY} ./qemu.sh",
            "presentation": {
                "focus": true,
                "panel": "shared",
            },
            "dependsOn": "build",
        },
        {
            "label": "refresh cmake test explorer",
            "type": "shell",
            "command": "sed -i '/\"cmakeExplorer.buildDir\":/ s|\"cmakeExplorer.buildDir\":[^,]*|\"cmakeExplorer.buildDir\": \"${input:buildDirectory}\"|' ${workspaceFolder}/.vscode/settings.json",
            "presentation": {
                "reveal": "never",
                "close": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "buildDirectory",
            "type": "command",
            "command": "cpptools.activeConfigCustomVariable",
            "args": "buildDirectory"
        },
        {
            "id": "buildTarget",
            "type": "command",
            "command": "cpptools.activeConfigCustomVariable",
            "args": "buildTarget"
        },
        {
            "id": "irosArchitecture",
            "type": "command",
            "command": "cpptools.activeConfigCustomVariable",
            "args": "irosArchitecture"
        },
        {
            "id": "buildIros",
            "type": "command",
            "command": "cpptools.activeConfigCustomVariable",
            "args": "buildIros"
        }
    ]
}
